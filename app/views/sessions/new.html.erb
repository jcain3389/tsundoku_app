<div class='sign-in'>

  <h1>Sign in</h1>

  <%= render 'common/flash' %>

  <%= form_for :session, url: sessions_path do |f| %>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>

    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>

    <%= f.submit 'Sign in', id: 'signin' %>
  <% end %>

</d>
